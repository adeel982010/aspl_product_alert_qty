<odoo>
    <data>

        <template id="report_wizard_template">
            <t t-call="web.external_layout">
                <t t-foreach="doc_ids" t-as="o">
                    <div class="page">
                        <h3 align="center">Stock Reorder Report</h3>
                        <t t-foreach="_group_products(data)" t-as="type">
                             <t t-if="o.group_by == 'category'">
                                 <b margin-bottom="10px">Category :</b>
                             </t>
                             <t t-if="o.group_by == 'location'">
                                 <b margin-bottom="10px">Location :</b>
                             </t>
                             <span t-esc="type"/>
                             <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Product Code</th>
                                        <th>Product Name</th>
                                        <th>Quantity in Stock</th>
                                        <th>Alert Quantity</th>
                                        <!-- <th>Reorder Quantity</th> -->
                                        <t t-if="o.group_by == 'category'">

                                            <th t-if="o.breakdown_location">Location</th>
                                        </t>
                                        <t t-if="o.group_by == 'location'">
                                            <th>Category</th>
                                        </t>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="_group_products(data).get(type)" t-as="val1">
                                        <tr>
                                            <td><span t-esc="val1['code']"/></td>
                                            <td><span t-esc="val1['name']"/></td>
                                            <td><span t-esc="val1['avl_qty']"/></td>
                                            <td><span t-esc="val1['alert_qty']"/></td>
                                            <!-- <td><span t-esc="val1['reorder_qty']"/></td> -->
                                            <t t-if="o.group_by == 'category'">
                                                <td t-if="o.breakdown_location"><span t-esc="val1['location']"/></td>
                                            </t>
                                            <t t-if="o.group_by == 'location'">
                                                <td><span t-esc="val1['category']"/></td>
                                            </t>
                                        </tr>
                                    </t>
                                </tbody>
                             </table>
                        </t>
                  </div>
                </t>
            </t>
        </template>

    </data>
</odoo>

